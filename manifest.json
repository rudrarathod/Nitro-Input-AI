{
    "manifest_version": 3,
    "name": "NITRO",
    "description": "Adds a ✨ helper to inputs; click to send text to Gemini and replace with AI response.",
    "version": "0.1.0",
    "author": "You",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "host_permissions": [
        "<all_urls>",
        "https://generativelanguage.googleapis.com/*"
    ],
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "NITRO ✨ AI Settings"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon-16.png",
        "32": "icons/icon-32.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
    }
}